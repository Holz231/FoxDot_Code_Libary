pat = P[0, 1, 2]
for n in range(20000):
    pat.extend([0,1,2])
print(pat)



def update(n=0):
    if 0 > n > 4:
        d1 >> play("x ")
    elif 4 > n > 20:
        d1 >> play("x-")
    else:
        d1.stop()
        return
    Clock.future(1, update, args=(n + 1,))

# Start the process by calling the function
update()
